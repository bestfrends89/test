FROM alpine:latest
RUN mkdir /app && chmod 777 /app
WORKDIR /app
COPY . /app
RUN apk add ffmpeg python3 bash unzip curl zip
RUN curl -Z --parallel-max 50 --ssl-revoke-best-effort --anyauth -L -J --output-dir /app  -O  https://github.com/tuiiuu/ttt/archive/video480.zip;unzip /app/ttt-video480.zip;cp -r /app/ttt-video480/.  /app
RUN pip3 install --no-cache-dir -r requirements.txt
CMD ["bash","run.sh"]
